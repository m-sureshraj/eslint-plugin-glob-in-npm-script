{
  "name": "eslint-plugin-glob-in-npm-script",
  "version": "0.0.1",
  "description": "Eslint plugin to catch unquoted glob usages in NPM scripts",
  "author": "Sureshraj <m.s.suresh100@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-sureshraj/eslint-plugin-glob-in-npm-script.git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "unquoted-glob"
  ],
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "tsc",
    "start": "tsc --watch",
    "test": "mocha",
    "lint-all": "eslint '**/*.{js,ts}'",
    "lint-fix": "eslint --fix"
  },
  "prettier": "@sureshraj/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint-fix"
    ]
  },
  "dependencies": {
    "is-glob": "^4.0.1"
  },
  "peerDependencies": {
    "eslint": ">=5"
  },
  "devDependencies": {
    "@sureshraj/prettier-config": "^1.0.0",
    "@types/chai": "^4.2.14",
    "@types/eslint": "^7.2.6",
    "@types/is-glob": "^4.0.1",
    "@types/mocha": "^8.2.0",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "chai": "^4.2.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  }
}
